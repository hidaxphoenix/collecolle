.split-left__inner
  %header.header
    .header__nav
      .header__nav__title
        = link_to root_path, class:"main-title" do
          Collecolle
      - if user_signed_in?
        .header__nav__mypage
          = link_to "マイページ", "/users/#{current_user.id}", class: "user-mypage"
      .header__nav__devise
        - if user_signed_in?
          .user-nav
            = link_to  "投稿する", "/posts/new", class: "post-new"
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class:"logout"
        - else
          .login-nav
            = link_to "新規登録", new_user_registration_path, class: 'sign-up'
            = link_to "ログイン", new_user_session_path, class: 'login'
  .main-icons
    .icon-box
      %i.fas.fa-robot
      %i.fas.fa-book
      %i.fas.fa-music
      %i.fas.fa-tshirt
      %i.fas.fa-couch
      %i.fas.fa-running
      %i.fas.fa-tv
      %i.fas.fa-palette
      %i.fas.fa-feather-alt
  = form_with(url: posts_searches_path, local: true, method: :get, class: "search-form") do |form|
    = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input"
    = form.submit "検索", class: "search-btn"
  %footer.footer
    %p
      Copyright Collecolle 2020.