- if user_signed_in?
  - unless post.like_user(current_user.id).blank?
    = link_to post_like_path(post_id: post.id ,id: post.likes[0].id), method: :delete, remote: true do
      .vertical_like
        いいね
        %i.fas.fa-star 
        %span.red-text
          = post.likes_count
  - else
    = link_to post_likes_path(post.id), method: :post, remote: true do
      .vertical_like
        いいね
        %i.fas.fa-star 
        %span.grey-text.text-darken-2
          = post.likes_count
- else
  - unless post.likes_count.nil?
    .vertical_like_nologin
      いいね
      %i.fas.fa-star
      %span.red-text
        = post.likes_count
  - else
    .vertical_like_nologin
      いいね
      %i.fas.fa-star
      %span.grey-text.text-darken-2
        = post.likes_count
