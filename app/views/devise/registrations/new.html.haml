.split
  .split-item.split-left
    = render "posts/left-index"
  .split-item.split-right
    .split-right__inner
      %h2 新規アカウント作成
      .contents-row-id-registration
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .field
            .label-box
              = f.label :ニックネーム
              %em (6文字まで)
              %br/
            = f.text_field :nickname, autofocus: true, maxlength: "6"
          .field
            .label-box
              = f.label :email
              %br/
            = f.email_field :email, autofocus: true, autocomplete: "email"
          .field
            .label-box
              = f.label :password
            - if @minimum_password_length
              %em
              -# (#{@minimum_password_length} 文字以上　半角英数で入力してください)
              -# %br/
            = f.password_field :password, autocomplete: "new-password"
          .field
            .label-box
              = f.label :password_confirmation
              %br/
            = f.password_field :password_confirmation, autocomplete: "new-password"
          .actions
            = f.submit "アカウント作成", class: "login-btn"
